@model Reservation;

<div class="form group mb-2">
    <label class="control-label">Car</label>
    <select asp-for="CarID" asp-items="ViewBag.Cars" class="form-control"></select>
    <span asp-validation-for="CarID" class="text-danger"></span>
</div>
<div class="form group mb-2">
    <label class="control-label">Store</label>
    <select asp-for="StoreID" asp-items="ViewBag.Stores" class="form-control"></select>
    <span asp-validation-for="StoreID" class="text-danger"></span>
</div>
<div class="form group mb-2">
    <label class="control-label">Date and Time</label>
    <input asp-for="PickupDateTime" class="form-control" />
    <span asp-validation-for="PickupDateTime" class="text-danger"></span>
</div>
<button type="submit" class="btn btn-primary">Submit reservation</button>